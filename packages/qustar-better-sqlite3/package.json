{
  "name": "qustar-better-sqlite3",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=10.4.0"
  },
  "description": "better-sqlite3 data source for qustar",
  "keywords": [
    "qustar",
    "sqlite",
    "better-sqlite3",
    "sql",
    "typescript"
  ],
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "files": [
    "dist/esm/src",
    "dist/cjs/src",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/cjs/src/index.js",
      "default": "./dist/cjs/src/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tilyupo/qustar.git",
    "directory": "packages/qustar-better-sqlite3"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && run-s build:*",
    "build:mjs": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "dev": "tsc -w",
    "deploy": "npm run build && node ../../scripts/deploy.mjs",
    "test": "vitest run"
  },
  "peerDependencies": {
    "better-sqlite3": "*",
    "qustar": "*"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.7",
    "rimraf": "^6.0.1",
    "vitest": "^1.6.0",
    "qustar-testsuite": "^0.0.1"
  }
}