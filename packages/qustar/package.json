{
  "name": "qustar",
  "version": "0.0.3",
  "description": "TypeScript SQL query builder",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "repository": "github:tilyupo/qustar",
  "type": "module",
  "files": [
    "build/src"
  ],
  "exports": {
    ".": "./build/src/index.js"
  },
  "license": "MIT",
  "keywords": [
    "sql",
    "typescript",
    "db",
    "query",
    "orm"
  ],
  "scripts": {
    "prepublish": "npm run compile",
    "release:major": "npm version $(semver $npm_package_version -i major) && npm publish --tag latest",
    "release:minor": "npm version $(semver $npm_package_version -i minor) && npm publish --tag latest",
    "release:patch": "npm version $(semver $npm_package_version -i patch) && npm publish --tag latest",
    "start": "tsx ./scripts/playground.ts",
    "test": "vitest run",
    "coverage": "npm run clean && vitest run --coverage",
    "lint": "gts lint",
    "clean": "gts clean && rimraf coverage",
    "build": "npm run clean && tsc",
    "fix": "gts fix",
    "madge": "madge --circular --extensions ts ./src"
  },
  "devDependencies": {
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "sqlite3": "^5.1.7",
    "ts-pattern": "^5.2.0"
  }
}
