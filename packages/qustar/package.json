{
  "name": "qustar",
  "version": "0.0.1",
  "description": "TypeScript SQL query builder",
  "license": "MIT",
  "keywords": [
    "sql",
    "typescript",
    "db",
    "query",
    "orm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tilyupo/qustar.git",
    "directory": "packages/qustar"
  },
  "main": "dist/cjs/src/index.js",
  "module": "dist/mjs/src/index.js",
  "files": [
    "dist/src",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/mjs/src/index.js",
      "require": "./dist/cjs/src/index.js",
      "default": "./dist/cjs/src/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && run-s build:*",
    "build:mjs": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "dev": "tsc -w",
    "deploy": "cp ../../README.md ./ && npm run build && node ../../scripts/deploy.js && rm ./README.md",
    "test": "vitest run"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "ts-pattern": "^5.2.0",
    "ts-toolbelt": "^9.6.0"
  }
}
