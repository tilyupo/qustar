{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // it was often suggested that libraries compile without esModuleInterop,
    // since its use in libraries could force users to adopt it too
    "esModuleInterop": false,
    "noErrorTruncation": true,
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
    // "noPropertyAccessFromIndexSignature": true,
    // "noUncheckedIndexedAccess": true
  },
  "exclude": ["node_modules"]
}
